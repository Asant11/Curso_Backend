<div>
    <h1>Productos:</h1>
    {{#if products}}
        <div id="products">
            {{#each products}}
                <div>
                    <p>Nombre: {{this.title}}</p>
                    <p>Precio:  ${{this.price}}</p>
                    <p>ID: {{this.id}}</p>
                </div>
            {{/each}}
        </div>
    {{else}}
        <h1>No hay productos disponibles</h1>
    {{/if}}
</div>

